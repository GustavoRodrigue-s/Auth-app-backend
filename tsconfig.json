{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "Node",

    "rootDirs": ["src"],
    "baseUrl": "src",

    "paths": {
      "@app/*": ["app/*"],
      "@utils/*": ["app/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
