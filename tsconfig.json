{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/App/*"],
      "@utils/*": ["./src/App/utils/*"]
    }
  }
}
