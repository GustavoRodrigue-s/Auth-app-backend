{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "lib": ["ESNext"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "Node",

    "baseUrl": ".",

    "paths": {
      "@app/*": ["src/app/*"],
      "@utils/*": ["src/app/utils/*"]
    }
  },
}
